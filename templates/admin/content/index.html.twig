{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_index' %}

{% block main %}
    <h1>{{ title }}</h1>

    <div class="well">
        {% for text in cover_text %}
            <p class="m-b-0">{{ text.text }}</p>
            <a href="/admin/edit/cover-text/{{ text.id }}" class="btn btn-sm btn-primary">
                <i class="fa fa-eye" aria-hidden="true"></i> editar
            </a>
        {% endfor %}
    </div>

    <h1>{{ title2 }}</h1>

    <div class="well">
